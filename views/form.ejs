<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Uploaded Files</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body>
    <!-- Navbar -->
    <%-include('partials/navbar') %>
    

        <div class="upload-form">
            <h2>Upload a File</h2>
            <form action="/auth/files" method="post" enctype="multipart/form-data">
                <input type="file" name="file" required>
                <button type="submit">Upload</button>

            </form>
        </div>
        <!-- !search functionality -->

        <!-- Uploaded Files -->
        <div class="uploaded-files">
            <h2 class="text">Uploaded Files</h2>
            <% if (uploadedFiles.length> 0) { %>
                <div class="file-list">

                    <% uploadedFiles.forEach((file)=> { %>
                        <div class="file-item">

                            <img src="<%= file.photoPath %>" alt="<%= file.filename %>">

                            <p>
                                <%= file.filename %>
                            </p>
                            <small>
                                <%= file.size %> b
                            </small>

                            <!-- Delete button for each file -->
                            <a href="/auth/files/<%= file.filename %>">Delete</a>

                            <a href="/auth/files/<%= file.filename %>/download">Download</a>

                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <p>No files uploaded yet.</p>
                    <% } %>
        </div>

        <!-- Optional JavaScript -->
        <!-- Add your custom scripts here if needed -->
</body>

</html>